<div class="page-header">
 <h1>All Workouts:</h1>
</div>
  
<p><%= link_to "Log a Lifting Sesh", new_workout_path, class: "btn" %></p>


<%= will_paginate @workouts %>
    <% @workouts.each do |workout| %>
      <div class="workout">
        <p><strong><%= workout.created_at.strftime("%-m-%-d-%y") %></strong></p>
        <%= workout.title %>
        <div class="meta">
          
           <%= link_to "Show", workout, class: "btn btn-info" %> 

           <%= link_to "Edit", edit_workout_path(workout), class: "btn btn-inverse" %> 
          <%= link_to "Delete", workout, method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger" %>
          


        </div>



      </div>


      <% end %>
      <%= will_paginate %>